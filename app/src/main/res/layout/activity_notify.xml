<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.mah.projekt_1.NotifyActivity">

    <include layout="@layout/app_bar"
        android:id="@+id/app_bar_notify" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar_notify"
        android:padding="@dimen/activity_vertical_margin">

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/reasonSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etMessage"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reasonSpinner"
            android:hint="Ex: Jag blir sen för min katt fyller år idag."
            android:scrollbars="vertical"
            android:drawablePadding="1dp" />

    </RelativeLayout>

</RelativeLayout>
