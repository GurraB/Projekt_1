<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/recycler_row_padding"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Fragments.GraphFragment">

    <EditText
        android:id="@+id/etGraphDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:editable="false"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <se.mah.projekt_1.Views.VisualSchedule
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundColor="#FFEEEEEE"
            app:stampColor="@color/colorPrimaryLight"
            app:scheduleColor="@color/colorAccentFaded"
            app:hourHeight="60"/>
    </ScrollView>
</LinearLayout>